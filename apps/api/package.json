{
  "name": "@meocrm/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "test": "jest --config ../../jest.config.js --runInBand --passWithNoTests",
    "test:webhooks-int": "node -e \"process.env.WEBHOOK_DISABLE_RETRY='true'; require('child_process').execSync('jest --config ./jest.webhooks.config.js --runInBand --passWithNoTests test/webhooks/webhooks.service.int.spec.ts', { stdio: 'inherit', cwd: __dirname })\"",
    "test:webhooks-unit": "node scripts/run-webhook-unit-test.js",
    "test:e2e": "RUN_E2E=true jest --config ../../jest.config.js --runInBand --testRegex=.*\\.e2e-spec\\.ts$",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma": "prisma",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nestjs/cli": "^11.0.12",
    "@nestjs/testing": "^11.1.9",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
