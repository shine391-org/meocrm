{
  "name": "meocrm",
  "version": "1.0.0",
  "description": "Multi-tenant CRM system inspired by KiotViet - Monorepo with NestJS + Next.js 14",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "pnpm --filter @meocrm/api dev",
    "dev:web": "pnpm --filter @meocrm/web dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @meocrm/api build",
    "build:web": "pnpm --filter @meocrm/web build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @meocrm/api test:e2e",
    "lint": "pnpm exec eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm exec eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "pnpm --filter @meocrm/api db:generate",
    "db:push": "pnpm --filter @meocrm/api db:push",
    "db:migrate": "pnpm --filter @meocrm/api db:migrate",
    "db:studio": "pnpm --filter @meocrm/api db:studio",
    "db:seed": "pnpm --filter @meocrm/api db:seed",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose down",
    "setup": "pnpm install && pnpm docker:dev && pnpm db:generate && pnpm db:push"
  },
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
